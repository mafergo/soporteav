{% extends "layout_adminLTE.html.twig" %}
{% set active = 'issue_add' %}
{% set title = 'Add Issue'|trans %}

{# Para probar y luego borrar #}
{% set categoryNews = [{'id': 1, 'name': 'Incidencias'}, {'id': 2, 'name': 'Recordatorios'}, {'id': 3, 'name': 'Tareas'}] %}


{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2>{{ title }}</h2>

            <form action="{{ path('issue_save') }}" method="post"  enctype='multipart/form-data'>
                <div class="form-group">
                    <label for="category">{{ 'Category'|trans }}</label>
                    <div class="controls">
					<select id="category" name="category"  class="form-control placeholder" required>
						<!--option value="" name="category">Seleccione una categoria. <i class="fa fa-sort"></i></option-->
					{% for category in categoryNews %}
						<option value="{{ category.id }}" name="category">{{ category.name }}</option>
					{% endfor %}
					</select>
			  </div>
                {##}

                <div class="form-group">
                    <label for="center">{{ 'Center'|trans }}</label>
                    <div class="controls">
                        {% if centers is defined %}
                        <select id="center" name="center"  class="form-control placeholder" required>
                            <option value="" name="center">Seleccione un Centro. <i class="fa fa-sort"></i></option>
                            {% for center in centers %}
                                <option value="{{ center.id }}" name="center">{{ center.name }}</option>
                            {% endfor %}
                        </select>
                        {% else %}
                           {{ "Not centers defined yet"|trans }}
                        {% endif %}
                    </div>
                </div>
                <div class="form-group" id="select_room"></div>

                <!--div class="form-group">
                    <label for="email">{{ 'Email'|trans }}</label>
                    <input type="text" class="form-control" name="email">
                </div-->

                <!-- Textarea -->
				<div class="form-group">
				  <label class="control-label" for="description">Cuerpo de la noticia:</label>
				  <div class="controls">                     
					<textarea id="desarrollo" name="description" class="form-control" required  placeholder="Describa detalladamente la incidencia."></textarea>
				  </div>
				</div>
				
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <button type="reset" class="btn btn-danger">{{ 'Cancel'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}