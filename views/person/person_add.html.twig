{% extends "layout_adminLTE.html.twig" %}
{% set active = 'people_add' %}
{% set title = 'New Person'|trans %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <h2>{{ title }}</h2>

            <form action="{{ path('person_save') }}" method="post"  enctype='multipart/form-data'>
                <div class="form-group">
                    <label for="firstName">{{ 'First Name'|trans }}</label>
                    <input type="text" class="form-control" name="firstName">
                </div>
                <div class="form-group">
                    <label for="lastName">{{ 'Last Name'|trans }}</label>
                    <input type="text" class="form-control" name="lastName">
                </div>
                <div class="form-group">
                    <label for="email">{{ 'Email'|trans }}</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <button type="reset" class="btn btn-danger">{{ 'Cancel'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}