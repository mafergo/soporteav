{% extends "layout_adminLTE.html.twig" %}
{% set active = 'centers_add' %}
{% set title = 'Add Center'|trans %}

{# Para probar y luego borrar #}
{% set UniTec_list = [{'id': 1, 'name': 'Pirotecnia'}] %}


{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <h2>{{ title }}</h2>

            <form action="{#{ path('person_save') }#}" method="post"  enctype='multipart/form-data'>
                <div class="form-group">
                    <label for="unit">{{ 'Unit'|trans }}</label>
                    <div class="controls">
					<select id="unit" name="unit"  class="form-control placeholder" required>
						<option value="" name="unit">Seleccione una unidad técnica. <i class="fa fa-sort"></i></option>
					{% for unit in UniTec_list %}
						<option value="{{ unit.id }}" name="unit">{{ unit.name }}</option>
					{% endfor %}
					</select>
			  </div>
                </div>
                <div class="form-group">
                    <label for="center">{{ 'Name'|trans }}</label>
                    <input type="text" class="form-control" name="center" placeholder="Nombre del Centro.">
                </div>
                
                <!-- Textarea -->
				<div class="form-group">
				  <label class="control-label" for="description">{{'Description'|trans}}</label>
				  <div class="controls">                     
					<textarea id="description" name="description" class="form-control" required  placeholder="Observaciones o descripción del Centro."></textarea>
				  </div>
				</div>
				
                <button type="reset" class="btn btn-danger">{{ 'Cancel'|trans }}</button>
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}